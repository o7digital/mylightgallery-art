---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getProducts } from '../../lib/wp';
import { fallbackPaintings } from '../../lib/fallbackPaintings';
import { slugify } from '../../lib/slugify';

export const prerender = false;

const paintingsFromWp = (await getProducts(60)).filter(painting => painting.image);
const paintings =
  paintingsFromWp.length > 0
    ? paintingsFromWp
    : fallbackPaintings.map(item => ({ ...item, link: '#!' }));
const orderedPaintings = [...paintings].reverse();
const introText =
  'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.';
const detailBase = '/en/works';
---

<BaseLayout
  lang="en"
  title="What's On – My Light Gallery Art"
  description="Works currently available at the gallery"
>
  <div class="rg-exhibitions-page rg-exhibitions-list">
    <section class="rg-exhibitions-intro">
      <div class="container">
        <p class="rg-eyebrow">Exhibitions</p>
        <h1>WHAT&rsquo;S ON</h1>
        <p class="rg-exhibitions-copy">{introText}</p>
      </div>
    </section>

    <section class="rg-exhibitions-grid-section">
      <div class="container">
        <div class="rg-exhibitions-grid">
          {orderedPaintings.map((painting, index) => {
            const paintingSlug = painting.slug ?? slugify(painting.title);
            const paintingHref = `${detailBase}/${paintingSlug}`;
            const meta = [painting.dimensions, painting.priceText].filter(Boolean).join(' • ');
            return (
              <article class="rg-exhibitions-item" style={`--delay: ${index * 0.04}s`}>
                <a class="rg-exhibitions-image" href={paintingHref}>
                  <img
                    src={painting.image}
                    alt={painting.title}
                    loading="lazy"
                    decoding="async"
                  />
                </a>
                <div class="rg-exhibitions-details">
                  <h2 class="rg-exhibitions-title">{painting.title}</h2>
                  {meta && <p class="rg-exhibitions-meta">{meta}</p>}
                  <a class="rg-exhibitions-link" href={paintingHref}>More info</a>
                </div>
              </article>
            );
          })}
          {orderedPaintings.length === 0 && (
            <p class="rg-empty">New works coming soon.</p>
          )}
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .rg-exhibitions-page {
    --rg-ink: #1d1a16;
    --rg-muted: #6f675f;
    --rg-line: #d7cfc2;
    --rg-paper: #fbf8f2;
    --motif-url: url('/motifs/paint-blotches.svg');
    background:
      radial-gradient(circle at 12% 15%, rgba(255, 255, 255, 0.85), transparent 55%),
      linear-gradient(140deg, rgba(248, 244, 238, 0.96), rgba(231, 222, 210, 0.98));
    color: var(--rg-ink);
    font-family: 'Roboto', sans-serif;
    position: relative;
    overflow: hidden;
  }

  .rg-exhibitions-page::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: var(--motif-url);
    background-size: 1200px auto;
    background-repeat: repeat;
    opacity: 0.18;
    mix-blend-mode: multiply;
    pointer-events: none;
    z-index: 0;
  }

  .rg-exhibitions-page > section,
  .rg-exhibitions-page > div {
    position: relative;
    z-index: 1;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .rg-exhibitions-intro {
    padding: 5rem 2rem 2.5rem;
  }

  .rg-exhibitions-intro h1 {
    font-family: 'Times New Roman', Times, serif;
    font-size: clamp(2.8rem, 6vw, 4rem);
    letter-spacing: 0.08em;
    margin: 0.5rem 0 1.5rem;
    text-transform: uppercase;
  }

  .rg-exhibitions-copy {
    max-width: 720px;
    color: var(--rg-muted);
    font-size: 1.05rem;
    line-height: 1.8;
    margin: 0;
  }

  .rg-eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.4em;
    font-size: 0.7rem;
    margin: 0;
  }

  .rg-exhibitions-grid-section {
    padding: 2.5rem 2rem 6rem;
  }

  .rg-exhibitions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 2.75rem 2.5rem;
  }

  .rg-exhibitions-item {
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid var(--rg-line);
    padding: 1.5rem;
    box-shadow: 0 18px 40px rgba(40, 30, 20, 0.12);
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    animation: rg-rise 0.8s ease both;
    animation-delay: var(--delay, 0s);
  }

  .rg-exhibitions-image img {
    width: 100%;
    height: 320px;
    object-fit: cover;
    display: block;
    border: 1px solid rgba(35, 28, 20, 0.12);
  }

  .rg-exhibitions-details {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .rg-exhibitions-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.6rem;
    margin: 0;
  }

  .rg-exhibitions-meta {
    margin: 0;
    color: var(--rg-muted);
    font-size: 0.95rem;
  }

  .rg-exhibitions-link {
    align-self: flex-start;
    text-decoration: none;
    color: var(--rg-ink);
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.78rem;
    border-bottom: 1px solid var(--rg-ink);
    padding-bottom: 0.35rem;
  }

  .rg-empty {
    grid-column: 1 / -1;
    text-align: center;
    color: var(--rg-muted);
  }

  @keyframes rg-rise {
    from {
      opacity: 0;
      transform: translateY(18px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .rg-exhibitions-item {
      animation: none;
    }
  }

  @media (max-width: 900px) {
    .rg-exhibitions-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 600px) {
    .rg-exhibitions-image img {
      height: 240px;
    }
  }
</style>
