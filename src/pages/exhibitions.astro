---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getProducts } from '../lib/wp';
import { fallbackPaintings } from '../lib/fallbackPaintings';

export const prerender = false;

const paintingsFromWp = (await getProducts(60)).filter(painting => painting.image);
const paintings =
  paintingsFromWp.length > 0
    ? paintingsFromWp
    : fallbackPaintings.map(item => ({ ...item, link: '#!' }));
const heroPainting = paintings[0];
---

<BaseLayout
  title="Qué hay – My Light Gallery Art"
  description="Obras disponibles en la galería"
>
  <div class="rg-exhibitions-page">
    <section class="rg-exhibitions-hero">
      {heroPainting?.image ? (
        <img
          src={heroPainting.image}
          alt={heroPainting.title ?? 'Qué hay'}
          loading="eager"
          decoding="async"
        />
      ) : (
        <div class="rg-exhibitions-hero__placeholder"></div>
      )}
      <header>
        <p class="rg-eyebrow">Exhibiciones</p>
        <h1>Qué hay</h1>
      </header>
    </section>

    <section class="rg-exhibitions-grid-section">
      <div class="container">
        <div class="rg-exhibitions-header">
          <h2>Todas las obras</h2>
          <span class="rg-exhibitions-count">{paintings.length} obras</span>
        </div>

        <div class="rg-exhibitions-grid">
          {paintings.map((painting, index) => {
            const paintingHref =
              painting.link && painting.link !== '#!' ? painting.link : painting.image ?? '#!';
            const meta = [painting.dimensions, painting.priceText].filter(Boolean).join(' • ');
            return (
              <article class="rg-exhibitions-item" style={`--delay: ${index * 0.04}s`}>
                <a href={paintingHref}>
                  <img
                    src={painting.image}
                    alt={painting.title}
                    loading="lazy"
                    decoding="async"
                  />
                </a>
                <p class="rg-exhibitions-title">{painting.title}</p>
                {meta && <p class="rg-exhibitions-meta">{meta}</p>}
              </article>
            );
          })}
          {paintings.length === 0 && (
            <p class="rg-empty">Pronto añadiremos las obras.</p>
          )}
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .rg-exhibitions-page {
    --rg-ink: #1d1a16;
    --rg-muted: #6f675f;
    --rg-line: #d7cfc2;
    background:
      radial-gradient(circle at 12% 15%, rgba(255, 255, 255, 0.85), transparent 55%),
      linear-gradient(140deg, rgba(248, 244, 238, 0.96), rgba(231, 222, 210, 0.98));
    color: var(--rg-ink);
    font-family: 'Roboto', sans-serif;
  }

  .rg-exhibitions-hero {
    position: relative;
    min-height: 55vh;
    height: 55vh;
    overflow: hidden;
  }

  .rg-exhibitions-hero img,
  .rg-exhibitions-hero__placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .rg-exhibitions-hero__placeholder {
    background: linear-gradient(140deg, #c9c1b6, #efe9df);
  }

  .rg-exhibitions-hero::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(15, 12, 10, 0.45), rgba(15, 12, 10, 0.1));
  }

  .rg-exhibitions-hero header {
    position: absolute;
    left: 50%;
    bottom: 15%;
    transform: translateX(-50%);
    text-align: center;
    color: #fff;
    z-index: 1;
    padding: 0 1.5rem;
  }

  .rg-exhibitions-hero h1 {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(2.8rem, 6vw, 4.6rem);
    letter-spacing: 0.1em;
    margin: 0.5rem 0 0;
  }

  .rg-eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.4em;
    font-size: 0.7rem;
    margin: 0;
  }

  .rg-exhibitions-grid-section {
    padding: 5rem 2rem 6rem;
  }

  .rg-exhibitions-grid-section .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .rg-exhibitions-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 2rem;
    border-bottom: 1px solid var(--rg-line);
    padding-bottom: 1.5rem;
    margin-bottom: 3rem;
  }

  .rg-exhibitions-header h2 {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(2rem, 4vw, 3rem);
    letter-spacing: 0.08em;
    margin: 0;
  }

  .rg-exhibitions-count {
    text-transform: uppercase;
    letter-spacing: 0.3em;
    font-size: 0.7rem;
    color: var(--rg-muted);
  }

  .rg-exhibitions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 2.5rem;
  }

  .rg-exhibitions-item {
    background: rgba(255, 255, 255, 0.86);
    border: 1px solid var(--rg-line);
    padding: 1rem;
    box-shadow: 0 18px 40px rgba(40, 30, 20, 0.12);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    animation: rg-rise 0.8s ease both;
    animation-delay: var(--delay, 0s);
  }

  .rg-exhibitions-item img {
    width: 100%;
    height: 280px;
    object-fit: cover;
    display: block;
    border: 1px solid rgba(35, 28, 20, 0.12);
  }

  .rg-exhibitions-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.4rem;
    margin: 0;
  }

  .rg-exhibitions-meta {
    margin: 0;
    color: var(--rg-muted);
    font-size: 0.9rem;
  }

  .rg-empty {
    grid-column: 1 / -1;
    text-align: center;
    color: var(--rg-muted);
  }

  @keyframes rg-rise {
    from {
      opacity: 0;
      transform: translateY(18px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .rg-exhibitions-item {
      animation: none;
    }
  }

  @media (max-width: 768px) {
    .rg-exhibitions-hero {
      height: 45vh;
      min-height: 320px;
    }

    .rg-exhibitions-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .rg-exhibitions-item img {
      height: 220px;
    }
  }
</style>
