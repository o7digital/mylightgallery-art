---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getProducts } from '../lib/wp';
import { fallbackPaintings } from '../lib/fallbackPaintings';
import { slugify } from '../lib/slugify';

export const prerender = false;

const paintingsFromWp = (await getProducts(60)).filter(painting => painting.image);
const paintings =
  paintingsFromWp.length > 0
    ? paintingsFromWp
    : fallbackPaintings.map(item => ({ ...item, link: '#!' }));
const orderedPaintings = [...paintings].reverse();
const heroImage = '/gallerie/gallerie-virtuelle.png';
const detailBase = '/obras';
---

<BaseLayout
  title="Qué hay – My Light Gallery Art"
  description="Obras disponibles en la galería"
>
  <div class="rg-exhibitions-page rg-exhibitions-list">
    <section class="rg-exhibitions-hero">
      {heroImage ? (
        <img
          src={heroImage}
          alt="Galería virtual"
          loading="eager"
          decoding="async"
        />
      ) : (
        <div class="rg-exhibitions-hero__placeholder"></div>
      )}
      <header>
        <p class="rg-eyebrow">Exhibiciones</p>
        <h1>QU&Eacute; HAY</h1>
      </header>
    </section>

    <section class="rg-exhibitions-grid-section">
      <div class="container">
        <div class="rg-exhibitions-grid">
          {orderedPaintings.map((painting, index) => {
            const paintingSlug = painting.slug ?? slugify(painting.title);
            const paintingHref = `${detailBase}/${paintingSlug}`;
            const meta = [painting.dimensions, painting.priceText].filter(Boolean).join(' • ');
            return (
              <article class="rg-exhibitions-item" style={`--delay: ${index * 0.04}s`}>
                <a class="rg-exhibitions-image" href={paintingHref}>
                  <img
                    src={painting.image}
                    alt={painting.title}
                    loading="lazy"
                    decoding="async"
                  />
                </a>
                <div class="rg-exhibitions-details">
                  <h2 class="rg-exhibitions-title">{painting.title}</h2>
                  {meta && <p class="rg-exhibitions-meta">{meta}</p>}
                  <a class="rg-exhibitions-link" href={paintingHref}>Más info</a>
                </div>
              </article>
            );
          })}
          {orderedPaintings.length === 0 && (
            <p class="rg-empty">Pronto añadiremos las obras.</p>
          )}
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .rg-exhibitions-page {
    --rg-ink: #1d1a16;
    --rg-muted: #6f675f;
    --rg-line: #d7cfc2;
    --rg-paper: #fbf8f2;
    --motif-url: url('/motifs/paint-blotches.svg');
    background:
      radial-gradient(circle at 12% 15%, rgba(255, 255, 255, 0.85), transparent 55%),
      linear-gradient(140deg, rgba(248, 244, 238, 0.96), rgba(231, 222, 210, 0.98));
    color: var(--rg-ink);
    font-family: 'Roboto', sans-serif;
    position: relative;
    overflow: hidden;
  }

  .rg-exhibitions-page::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: var(--motif-url);
    background-size: 1200px auto;
    background-repeat: repeat;
    opacity: 0.18;
    mix-blend-mode: multiply;
    pointer-events: none;
    z-index: 0;
    animation: motif-drift 80s linear infinite;
  }

  .rg-exhibitions-page > section,
  .rg-exhibitions-page > div {
    position: relative;
    z-index: 1;
  }

  .rg-exhibitions-hero {
    position: relative;
    min-height: 55vh;
    height: 55vh;
    overflow: hidden;
    background: #0f0c0a;
  }

  .rg-exhibitions-hero img,
  .rg-exhibitions-hero__placeholder {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
    display: block;
  }

  .rg-exhibitions-hero__placeholder {
    background: linear-gradient(140deg, #c9c1b6, #efe9df);
  }

  .rg-exhibitions-hero::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(15, 12, 10, 0.45), rgba(15, 12, 10, 0.1));
  }

  .rg-exhibitions-hero header {
    position: absolute;
    left: 50%;
    bottom: 15%;
    transform: translateX(-50%);
    text-align: center;
    color: #fff;
    z-index: 1;
    padding: 0 1.5rem;
  }

  .rg-exhibitions-hero h1 {
    font-family: 'Times New Roman', Times, serif;
    font-size: clamp(2.8rem, 6vw, 4rem);
    letter-spacing: 0.08em;
    margin: 0.5rem 0 0;
    text-transform: uppercase;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .rg-eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.4em;
    font-size: 0.7rem;
    margin: 0;
  }

  .rg-exhibitions-grid-section {
    padding: 2.5rem 2rem 6rem;
  }

  .rg-exhibitions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 2.75rem 2.5rem;
  }

  .rg-exhibitions-item {
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid var(--rg-line);
    padding: 1.5rem;
    box-shadow: 0 18px 40px rgba(40, 30, 20, 0.12);
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    animation: rg-rise 0.8s ease both;
    animation-delay: var(--delay, 0s);
  }

  .rg-exhibitions-image img {
    width: 100%;
    height: 320px;
    object-fit: cover;
    display: block;
    border: 1px solid rgba(35, 28, 20, 0.12);
  }

  .rg-exhibitions-details {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .rg-exhibitions-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.6rem;
    margin: 0;
  }

  .rg-exhibitions-meta {
    margin: 0;
    color: var(--rg-muted);
    font-size: 0.95rem;
  }

  .rg-exhibitions-link {
    align-self: flex-start;
    text-decoration: none;
    color: var(--rg-ink);
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.78rem;
    border-bottom: 1px solid var(--rg-ink);
    padding-bottom: 0.35rem;
  }

  .rg-empty {
    grid-column: 1 / -1;
    text-align: center;
    color: var(--rg-muted);
  }

  @keyframes motif-drift {
    0% {
      background-position: 0% 0%;
    }
    50% {
      background-position: 45% 35%;
    }
    100% {
      background-position: 0% 70%;
    }
  }

  @keyframes rg-rise {
    from {
      opacity: 0;
      transform: translateY(18px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .rg-exhibitions-page::before {
      animation: none;
    }

    .rg-exhibitions-item {
      animation: none;
    }
  }

  @media (max-width: 900px) {
    .rg-exhibitions-hero {
      height: 45vh;
      min-height: 320px;
    }

    .rg-exhibitions-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 600px) {
    .rg-exhibitions-image img {
      height: 240px;
    }
  }
</style>
