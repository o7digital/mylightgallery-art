---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { getEnvValue } from '../lib/env';

const {
  title = 'My Light Gallery Art',
  description = '',
  lang = 'es',
  ogImage: ogImageProp,
  showEventsNews = true,
} = Astro.props;
const gaMeasurementId =
  getEnvValue(['PUBLIC_GA_MEASUREMENT_ID', 'GA_MEASUREMENT_ID']) ?? 'G-5F4G9JJ05G';
const enableGa = Boolean(gaMeasurementId);
const gaInlineScript = enableGa
  ? `window.dataLayer = window.dataLayer || [];
function gtag(){dataLayer.push(arguments);}
gtag('js', new Date());
gtag('config', '${gaMeasurementId}');`
  : null;
const site = Astro.site;
const currentUrl = Astro.url;
const canonicalUrl = site ? new URL(currentUrl.pathname, site).href : currentUrl.href;
const locale = lang === 'en' ? 'en_US' : 'es_ES';
const siteName = 'My Light Art Gallery';
const defaultOgImage = site
  ? new URL('/slider/cadenas-acrilico-36x48.webp', site).href
  : '/slider/cadenas-acrilico-36x48.webp';
const ogImage = ogImageProp
  ? (site && !ogImageProp.startsWith('http') ? new URL(ogImageProp, site).href : ogImageProp)
  : defaultOgImage;
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'ArtGallery',
  name: siteName,
  url: site ? site.href : 'https://www.mylightartgallery.com',
  image: ogImage,
  address: {
    '@type': 'PostalAddress',
    streetAddress: "5215 N. O'Connor Rd. Ste 1725",
    addressLocality: 'Irving',
    addressRegion: 'TX',
    postalCode: '75039',
    addressCountry: 'US',
  },
  telephone: '+1-972-444-4553',
  areaServed: {
    '@type': 'AdministrativeArea',
    name: 'Irving, TX',
  },
  sameAs: [
    'https://instagram.com/mylightgalleryart',
    'https://facebook.com/mylightgalleryart',
  ],
};
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5, user-scalable=yes" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/logo/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/logo/favicon.ico" />
    <link rel="apple-touch-icon" href="/logo/apple-touch-icon.png" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600;700&family=Roboto:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <link rel="canonical" href={canonicalUrl} />
    <meta name="robots" content="index,follow" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content={locale} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    {enableGa && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaMeasurementId}`}></script>
        <script is:inline set:html={gaInlineScript}></script>
      </>
    )}
    {site && (
      <>
        <link rel="alternate" href={new URL('/', site).href} hreflang="es" />
        <link rel="alternate" href={new URL('/en/', site).href} hreflang="en" />
        <link rel="alternate" href={new URL('/', site).href} hreflang="x-default" />
      </>
    )}
    <script type="application/ld+json" is:inline set:html={JSON.stringify(structuredData)}></script>
  </head>
  <body>
    <Header lang={lang} showEventsNews={showEventsNews} />
    <main>
      <slot />
    </main>
    <Footer lang={lang} showEventsNews={showEventsNews} />
    <script src="//code.tidio.co/iwug2vjxjqyhh7jn6jgogo5pzdwfmldc.js" async></script>
  </body>
</html>
