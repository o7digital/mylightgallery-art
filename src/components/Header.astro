---
const { lang = 'es', showEventsNews = true } = Astro.props;
const rawPath = Astro.url?.pathname ?? '/';
const normalizedPath = rawPath !== '/' && rawPath.endsWith('/') ? rawPath.slice(0, -1) : rawPath;

const navLeft =
  lang === 'en'
    ? [
        { href: '/en/#collections', label: 'Collections' },
        { href: '/en/#collections', label: 'Buy' },
        ...(showEventsNews ? [{ href: '/en/#events', label: "What's on" }] : []),
      ]
    : [
        { href: '/#colecciones', label: 'Colecciones' },
        { href: '/#colecciones', label: 'Compra' },
        ...(showEventsNews ? [{ href: '/#eventos', label: 'Qu√© hay' }] : []),
      ];

const navRight =
  lang === 'en'
    ? [
        ...(showEventsNews ? [{ href: '/en/#news', label: 'News' }] : []),
        { href: '/en/#layla', label: 'Layla' },
        { href: '/en/contact', label: 'Contact' },
      ]
    : [
        ...(showEventsNews ? [{ href: '/#noticias', label: 'Noticias' }] : []),
        { href: '/#layla', label: 'Layla' },
        { href: '/contacto', label: 'Contacto' },
      ];

const logoHref = lang === 'en' ? '/en/' : '/';
const logoLabel = 'My Light Art Gallery';
const langPathMap = {
  '/': '/en/',
  '/en': '/',
  '/aviso-privacidad': '/en/privacy',
  '/en/privacy': '/aviso-privacidad',
  '/contacto': '/en/contact',
  '/en/contact': '/contacto',
  '/exhibitions': '/en/exhibitions',
  '/en/exhibitions': '/exhibitions',
  '/newsletter': '/en/newsletter',
  '/en/newsletter': '/newsletter',
  '/es/condiciones-generales-de-uso': '/en/terms-and-conditions',
  '/en/terms-and-conditions': '/es/condiciones-generales-de-uso',
  '/es/politica-de-devoluciones': '/en/return-policy',
  '/en/return-policy': '/es/politica-de-devoluciones',
  '/es/garantias-y-autenticidad': '/en/warranties-and-authenticity',
  '/en/warranties-and-authenticity': '/es/garantias-y-autenticidad',
  '/es/impuestos-texas': '/en/texas-taxes',
  '/en/texas-taxes': '/es/impuestos-texas',
};
const fallbackSwitch =
  lang === 'en'
    ? normalizedPath === '/en'
      ? '/'
      : normalizedPath.replace(/^\/en/, '') || '/'
    : normalizedPath === '/'
      ? '/en/'
      : `/en${normalizedPath}`;
const switchHref = langPathMap[normalizedPath] ?? fallbackSwitch;
const switchLang = lang === 'en' ? { href: switchHref, label: 'ES' } : { href: switchHref, label: 'EN' };
---

<header class="site-header">
  <div class="container">
    <nav class="main-nav">
      <div class="nav-top">
        <button class="mobile-menu-toggle" aria-label="Toggle menu">
          <span></span>
          <span></span>
          <span></span>
        </button>

        <div class="nav-icons">
          <a class="lang-switch" href={switchLang.href}>{switchLang.label}</a>
          <button class="icon-btn" aria-label="Search">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"/>
              <path d="m21 21-4.35-4.35"/>
            </svg>
          </button>
          <a href="/login" class="icon-btn" aria-label="Login">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
              <circle cx="12" cy="7" r="4"/>
            </svg>
          </a>
          <a href="/carrito" class="icon-btn" aria-label="Carrito">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="9" cy="21" r="1"/>
              <circle cx="20" cy="21" r="1"/>
              <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
            </svg>
          </a>
        </div>
      </div>

      <div class="nav-menu">
        <div class="nav-left">
          {navLeft.map((item) => (
            <a href={item.href}>{item.label}</a>
          ))}
        </div>
        
        <a href={logoHref} class="logo" aria-label={logoLabel}>
          <img src="/logo/MY%20LIGHT%20ART%20GALLERY%20BlancLOGO.png" alt={logoLabel} />
        </a>
        
        <div class="nav-right">
          {navRight.map((item) => (
            <a href={item.href}>{item.label}</a>
          ))}
        </div>
      </div>
    </nav>
  </div>
</header>

<style>
  .site-header {
    background: rgba(0, 0, 0, 0.75);
    backdrop-filter: blur(10px);
    padding: 0.6rem 0 0.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    overflow: visible;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .site-header .container {
    display: block;
    height: auto;
  }

  .main-nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.3rem;
    position: relative;
    overflow: visible;
  }

  .nav-top {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 1rem;
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    gap: 0.35rem;
    z-index: 1001;
  }

  .mobile-menu-toggle span {
    display: block;
    width: 25px;
    height: 2px;
    background: #fff;
    transition: all 0.3s;
  }

  .mobile-menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
  }

  .mobile-menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
  }

  .nav-menu {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 1.5rem;
    align-items: center;
    justify-content: center;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    overflow: visible;
  }

  .nav-left,
  .nav-right {
    display: flex;
    gap: 1.5rem;
  }

  .nav-left {
    justify-content: flex-end;
    justify-self: end;
  }

  .nav-right {
    justify-content: flex-start;
    justify-self: start;
  }

  .logo {
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    padding: 0;
  }

  .logo img {
    height: 120px;
    width: auto;
    display: block;
  }

  .main-nav a:not(.logo) {
    color: #fff;
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.3s;
    white-space: nowrap;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .main-nav a:not(.logo):hover {
    color: #ccc;
  }

  .nav-icons {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  @media (max-width: 1400px) {
    .main-nav a:not(.logo) {
      font-size: 0.9rem;
      letter-spacing: 0.08em;
    }
  }

  .icon-btn {
    background: none;
    border: none;
    color: #fff;
    cursor: pointer;
    padding: 0.3rem;
    transition: color 0.3s;
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .icon-btn:hover {
    color: #ccc;
  }

  .lang-switch {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.25rem 0.6rem;
    border: 1px solid #fff;
    border-radius: 999px;
    color: #fff;
    text-decoration: none;
    font-size: 0.78rem;
    letter-spacing: 0.06em;
    transition: all 0.3s;
    text-transform: uppercase;
  }

  .lang-switch:hover {
    background: #fff;
    color: #000;
  }

  @media (max-width: 1024px) {
    .main-nav {
      align-items: stretch;
      padding-right: 0;
    }

    .nav-top {
      justify-content: space-between;
    }

    .mobile-menu-toggle {
      display: flex;
    }

    .nav-menu {
      position: fixed;
      top: 0;
      left: -100%;
      width: 280px;
      height: 100vh;
      background: rgba(0, 0, 0, 0.95);
      flex-direction: column;
      padding: 5rem 2rem 2rem;
      transition: left 0.3s ease;
      overflow-y: auto;
      display: flex;
    }

    .nav-menu.active {
      left: 0;
    }

    .nav-left,
    .nav-right {
      flex-direction: column;
      gap: 1.5rem;
      align-items: center;
    }

    .logo {
      padding: 0;
      position: static;
      width: auto;
      height: auto;
    }

    .logo img {
      position: static;
      transform: none;
      height: 96px;
    }

    .container {
      padding: 0 1rem;
    }

    .nav-icons {
      gap: 0.8rem;
      position: static;
      transform: none;
    }

    .icon-btn svg {
      width: 18px;
      height: 18px;
    }
  }

  @media (max-width: 480px) {
    .logo {
      padding: 0;
    }

    .logo img {
      height: 78px;
    }

    .main-nav a:not(.logo) {
      font-size: 0.85rem;
    }
  }
</style>

<script>
  const menuToggle = document.querySelector('.mobile-menu-toggle');
  const navMenu = document.querySelector('.nav-menu');
  const navLinks = document.querySelectorAll('.nav-menu a');

  menuToggle?.addEventListener('click', () => {
    menuToggle.classList.toggle('active');
    navMenu?.classList.toggle('active');
  });

  navLinks.forEach(link => {
    link.addEventListener('click', () => {
      menuToggle?.classList.remove('active');
      navMenu?.classList.remove('active');
    });
  });
</script>
