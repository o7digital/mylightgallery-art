---
const { lang = 'es', showEventsNews = true } = Astro.props;

const slides =
  lang === 'en'
    ? [
        {
          title: 'MODERN MASTERPIECES',
          label: 'CONTEMPORARY ART',
          href: '/en/#collections',
          bg: '/slider/gemini2.webp',
        },
        {
          title: '21ST CENTURY PAINTINGS',
          label: 'CLASSIC COLLECTION',
          href: '/en/#collections',
          bg: '/slider/cadenas-acrilico-36x48.webp',
        },
        {
          title: 'PAINTINGS & ABSTRACT ART',
          label: 'SPECIAL EXHIBITION',
          href: '/en/#events',
          bg: '/slider/circo-acrilica-48x24.webp',
        },
      ]
    : [
        {
          title: 'OBRAS MAESTRAS MODERNAS',
          label: 'ARTE CONTEMPORÁNEO',
          href: '/#colecciones',
          bg: '/slider/gemini2.webp',
        },
        {
          title: 'PINTURAS DEL SIGLO 21',
          label: 'COLECCIÓN CLÁSICA',
          href: '/#colecciones',
          bg: '/slider/cadenas-acrilico-36x48.webp',
        },
        {
          title: 'PINTURAS Y ARTE ABSTRACTO',
          label: 'EXPOSICIÓN ESPECIAL',
          href: '/#eventos',
          bg: '/slider/circo-acrilica-48x24.webp',
        },
      ];

const newsletterText = lang === 'en' ? 'Subscribe to our newsletter' : 'Suscribe nuestra newsletter';
const safeSlides = showEventsNews
  ? slides
  : slides.map((slide, index) =>
      index === 2
        ? {
            ...slide,
            href: lang === 'en' ? '/en/#collections' : '/#colecciones',
          }
        : slide
    );
const heroCtaHref = lang === 'en' ? '/en/#collections' : '/#colecciones';
---

<section class="hero">
  <div class="slider">
    {safeSlides.map((slide, index) => (
      <div class={`slide ${index === 0 ? 'active' : ''}`} style={`background-image: url('${slide.bg}')`}>
        <div class="slide-content">
          <p class="slide-artist">{slide.label}</p>
          <h2 class="slide-title">{slide.title}</h2>
          <a href={heroCtaHref} class="slide-btn">{lang === 'en' ? 'See More' : 'Ver más'}</a>
        </div>
      </div>
    ))}
  </div>
  
  <button class="slider-nav prev" aria-label={lang === 'en' ? 'Previous slide' : 'Slide anterior'}>
    <svg width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M15 18l-6-6 6-6"/>
    </svg>
  </button>
  <button class="slider-nav next" aria-label={lang === 'en' ? 'Next slide' : 'Siguiente slide'}>
    <svg width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M9 18l6-6-6-6"/>
    </svg>
  </button>

  <div class="hero-newsletter">
    <a href={lang === 'en' ? '/en/newsletter' : '/newsletter'} class="newsletter-link">{newsletterText}</a>
  </div>
</section>

<script>
  const slides = document.querySelectorAll('.slide');
  const prevBtn = document.querySelector('.slider-nav.prev');
  const nextBtn = document.querySelector('.slider-nav.next');
  let currentSlide = 0;

  function showSlide(index) {
    slides.forEach(slide => slide.classList.remove('active'));
    slides[index].classList.add('active');
  }

  function nextSlide() {
    currentSlide = (currentSlide + 1) % slides.length;
    showSlide(currentSlide);
  }

  function prevSlide() {
    currentSlide = (currentSlide - 1 + slides.length) % slides.length;
    showSlide(currentSlide);
  }

  nextBtn?.addEventListener('click', nextSlide);
  prevBtn?.addEventListener('click', prevSlide);

  setInterval(nextSlide, 5000);
</script>

<style>
  .hero {
    min-height: 92vh;
    height: 92vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    position: relative;
    overflow: hidden;
  }

  .slider {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    opacity: 0;
    transition: opacity 1s ease-in-out;
  }

  .slide.active {
    opacity: 1;
  }

  .slide-content {
    position: absolute;
    bottom: 25%;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    z-index: 10;
    max-width: 900px;
    width: 100%;
    padding: 0 2rem;
  }

  .slide-artist {
    font-size: 1rem;
    font-weight: 400;
    letter-spacing: 0.15em;
    color: white;
    margin-bottom: 1rem;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  .slide-title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 400;
    letter-spacing: 0.08em;
    color: white;
    margin-bottom: 2rem;
    line-height: 1.2;
    background: rgba(0, 0, 0, 0.3);
    padding: 2rem 3rem;
    backdrop-filter: blur(5px);
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  .slide-btn {
    display: inline-block;
    padding: 0.75rem 2rem;
    border: 2px solid white;
    color: white;
    text-decoration: none;
    font-size: 1rem;
    letter-spacing: 0.05em;
    transition: all 0.3s;
    background: rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(5px);
  }

  .slide-btn:hover {
    background: rgba(255, 255, 255, 0.9);
    color: #000;
  }

  .slider-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.5);
    border: none;
    color: white;
    padding: 1rem;
    cursor: pointer;
    transition: background 0.3s;
    z-index: 10;
  }

  .slider-nav:hover {
    background: rgba(0, 0, 0, 0.8);
  }

  .slider-nav.prev {
    left: 2rem;
  }

  .slider-nav.next {
    right: 2rem;
  }

  .hero-newsletter {
    position: absolute;
    bottom: 1rem;
    left: 1rem;
    z-index: 5;
    pointer-events: auto;
  }

  .newsletter-link {
    color: white;
    text-decoration: none;
    font-size: 0.95rem;
    transition: opacity 0.3s;
    border-bottom: 1px solid white;
    padding-bottom: 2px;
    text-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
  }

  .newsletter-link:hover {
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 100vh;
      height: auto;
    }

    .slider-nav {
      padding: 0.5rem;
    }

    .slider-nav.prev {
      left: 1rem;
    }

    .slider-nav.next {
      right: 1rem;
    }

    .hero-newsletter {
      position: absolute;
      bottom: 1rem;
      left: 1rem;
      margin-top: 0;
    }
  }
</style>
