  <div class="footer-bottom">
    <span>{copyright}</span>
    <a href="https://www.o7digital.com" target="_blank" class="made-by">{madeByText}</a>
  </div>
</footer>

<style>
  .site-footer {
    background: rgb(229, 225, 212);
    padding: 3rem 2rem 1rem;
    margin-top: 4rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: minmax(200px, 280px) repeat(4, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .footer-brand {
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    margin-left: -2cm;
  }

  .footer-logo {
    width: 168px;
    height: auto;
    display: block;
  }

  .footer-grid strong {
    display: block;
    margin-bottom: 1rem;
    font-size: 1.1rem;
    color: #3b3b3b;
  }

  .footer-grid p {
    margin: 0.5rem 0;
    color: #555;
    font-size: 0.95rem;
  }

  .footer-grid a {
    color: #555;
    text-decoration: none;
    transition: color 0.3s;
  }

  .footer-grid a:hover {
    color: #000;
  }

  .social-icons {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .social-icons a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    transition: opacity 0.3s;
  }

  .social-icons a:hover {
    opacity: 0.7;
  }

  .footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid #ddd;
    color: #777;
    font-size: 0.9rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .made-by {
    color: #777;
    text-decoration: none;
    transition: color 0.3s;
  }

  .made-by:hover {
    color: #000;
  }

  @media (max-width: 900px) {
    .footer-grid {
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
    }

    .footer-logo {
      width: 98px;
    }
  }
</style>
